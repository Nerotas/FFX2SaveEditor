<Window x:Class="FFX2SaveEditor.MultiBlueBullets"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Blue Bullets (All Characters)" Height="560" Width="780"
 WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
 <Grid Margin="12">
  <Grid.RowDefinitions>
   <RowDefinition Height="*"/>
   <RowDefinition Height="Auto"/>
  </Grid.RowDefinitions>
  <Grid>
   <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="*"/>
   </Grid.ColumnDefinitions>
   <!-- Yuna -->
   <StackPanel Grid.Column="0" Margin="0,0,8,0">
    <TextBlock Text="Yuna" FontWeight="Bold" FontSize="16" Margin="0,0,0,6"/>
    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="430">
     <StackPanel x:Name="YunaPanel" />
    </ScrollViewer>
   </StackPanel>
   <!-- Rikku -->
   <StackPanel Grid.Column="1" Margin="8,0,8,0">
    <TextBlock Text="Rikku" FontWeight="Bold" FontSize="16" Margin="0,0,0,6"/>
    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="430">
     <StackPanel x:Name="RikkuPanel" />
    </ScrollViewer>
   </StackPanel>
   <!-- Paine -->
   <StackPanel Grid.Column="2" Margin="8,0,0,0">
    <TextBlock Text="Paine" FontWeight="Bold" FontSize="16" Margin="0,0,0,6"/>
    <ScrollViewer VerticalScrollBarVisibility="Auto" Height="430">
     <StackPanel x:Name="PainePanel" />
    </ScrollViewer>
   </StackPanel>
  </Grid>
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
     <Button Width="140" Height="34" Margin="0,0,10,0" Click="MasterAll_Click">Master All</Button>
     <Button Width="140" Height="34" Margin="0,0,10,0" Click="UnmasterAll_Click">Unmaster All</Button>
     <Button Width="120" Height="34" Margin="0,0,10,0" IsDefault="True" Click="Ok_Click">OK</Button>
     <Button Width="120" Height="34" IsCancel="True">Cancel</Button>
    </StackPanel>
 </Grid>
</Window>
